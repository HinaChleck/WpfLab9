<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle" >
        <Setter Property ="Control.Background" Value="White"/>
        <Setter Property="Control.Foreground" Value="Black"/>
    </Style>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="ComboBox"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="ComboBoxItem"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="TextBox"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="ToolBarTray"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="ToolBar"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="ToggleButton"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="RadioButton"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="MenuItem"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="Menu"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="Grid"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="StackPanel"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="TextBlock"/>
    <Style BasedOn="{StaticResource WindowStyle}" TargetType="Border"/>
    


</ResourceDictionary>